# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /init                       controllers.Application.initialize()

GET     /:event/register            controllers.Application.registration(event:models.Event)
POST    /:event/register            controllers.Application.doRegistration(event:models.Event)

# debug

GET     /send-email                 controllers.Application.sendEmailTest()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)