# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /init                       controllers.Application.initialize()

GET     /:event/register            controllers.Registration.registration(event:models.Event)
POST    /:event/register            controllers.Registration.doRegistration(event:models.Event)
GET     /:event/registered/:uuid    controllers.Registration.waitForEmail(event:models.Event, uuid)
GET     /:event/confirm/:uuid       controllers.Registration.confirmRegistration(event:models.Event, uuid)
GET     /:event/login               controllers.Registration.login(event:models.Event)
POST    /:event/login               controllers.Registration.doLogin(event:models.Event)

# debug


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)